<Window x:Class="CoomerDownloader.PostDownloaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoomerDownloader"
        mc:Ignorable="d"
        Title="Post Downloader - by Kynarix and Twixx" Height="750" Width="1200"
        Background="#0D1117" WindowStyle="None" AllowsTransparency="True" 
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="Foreground" Value="#C9D1D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#30363D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#161B22"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#161B22"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="BorderBrush" Value="#2EA043"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Border Background="#0D1117" CornerRadius="12" BorderBrush="#30363D" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.7"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#161B22" CornerRadius="12,12,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="📸" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#A371F7" BlurRadius="10" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center">
                            <Run Text="Post Downloader" Foreground="#C9D1D9"/>
                        </TextBlock>
                        <TextBlock x:Name="CreatorNameText" FontSize="14" Foreground="#58A6FF" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button Content="─" Click="MinimizeButton_Click" Width="40" Height="30" 
                                Background="Transparent" Foreground="#8B949E" BorderThickness="0" 
                                FontSize="16" FontWeight="Bold" Cursor="Hand"/>
                        <Button Content="□" Click="MaximizeButton_Click" Width="40" Height="30" 
                                Background="Transparent" Foreground="#8B949E" BorderThickness="0" 
                                FontSize="16" FontWeight="Bold" Cursor="Hand" Margin="5,0"/>
                        <Button Content="✕" Click="CloseButton_Click" Width="40" Height="30" 
                                Background="Transparent" Foreground="#8B949E" BorderThickness="0" 
                                FontSize="16" FontWeight="Bold" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Download Path Selector -->
            <Border Grid.Row="1" Background="#161B22" Padding="20,15" Margin="20,20,20,10" 
                    CornerRadius="8" BorderBrush="#30363D" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="📂 Download to:" FontSize="14" 
                               Foreground="#C9D1D9" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <Border Grid.Column="1" Background="#0D1117" CornerRadius="6" 
                            BorderBrush="#30363D" BorderThickness="1" Padding="12,8">
                        <TextBlock x:Name="DownloadPathText" FontSize="13" Foreground="#8B949E" 
                                   VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                    </Border>
                    
                    <Button x:Name="BrowseFolderButton" Grid.Column="2" Content="📁 Browse" 
                            Click="BrowseFolderButton_Click" Height="36" Padding="20,0" Margin="15,0,0,0"
                            Style="{StaticResource ModernButton}" FontSize="12"/>
                </Grid>
            </Border>

            <!-- Posts List -->
            <Border Grid.Row="2" Margin="20,0,20,10" Background="#161B22" 
                    CornerRadius="8" BorderBrush="#30363D" BorderThickness="1" Padding="2">
                <ListView x:Name="PostsListView" Background="Transparent" BorderThickness="0"
                          SelectionMode="Multiple" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="#0D1117"/>
                            <Setter Property="Foreground" Value="#C9D1D9"/>
                            <Setter Property="Padding" Value="12"/>
                            <Setter Property="Margin" Value="3"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#30363D"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Padding="{TemplateBinding Padding}" CornerRadius="6">
                                            <GridViewRowPresenter Content="{TemplateBinding Content}" 
                                                                Columns="{TemplateBinding GridView.ColumnCollection}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#21262D"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#58A6FF"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#1C2938"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#58A6FF"/>
                                                <Setter Property="Foreground" Value="#58A6FF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="🆔 Post ID" DisplayMemberBinding="{Binding id}" Width="140">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#0D1117"/>
                                        <Setter Property="Foreground" Value="#8B949E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                            </GridViewColumn>
                            <GridViewColumn Header="📝 Title" DisplayMemberBinding="{Binding title}" Width="450">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#0D1117"/>
                                        <Setter Property="Foreground" Value="#8B949E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                            </GridViewColumn>
                            <GridViewColumn Header="💬 Content" DisplayMemberBinding="{Binding substring}" Width="340">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#0D1117"/>
                                        <Setter Property="Foreground" Value="#8B949E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                            </GridViewColumn>
                            <GridViewColumn Header="📁 Files" Width="90">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#0D1117"/>
                                        <Setter Property="Foreground" Value="#8B949E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="#58A6FF" FontWeight="SemiBold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}">
                                                    <Binding Path="AllFiles.Count" FallbackValue="0"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="📎 Attachments" Width="130">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#0D1117"/>
                                        <Setter Property="Foreground" Value="#8B949E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="12,10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Foreground="#A371F7" FontWeight="SemiBold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}">
                                                    <Binding Path="attachments.Count" FallbackValue="0"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>

            <!-- Download Progress & Statistics -->
            <Border Grid.Row="3" Background="#161B22" Padding="20,15" Margin="20,0,20,10" 
                    CornerRadius="8" BorderBrush="#30363D" BorderThickness="1">
                <StackPanel>
                    <!-- Main Status Text -->
                    <TextBlock x:Name="DownloadStatusText" FontSize="14" Foreground="#C9D1D9" 
                               Margin="0,0,0,12" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    
                    <!-- Progress Bar with Percentage -->
                    <Grid Margin="0,0,0,12">
                        <Border Height="8" Background="#0D1117" CornerRadius="4" 
                                Visibility="{Binding ElementName=DownloadProgressBar, Path=Visibility}">
                            <ProgressBar x:Name="DownloadProgressBar" Height="8" 
                                         Visibility="Collapsed" Background="Transparent" BorderThickness="0">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#238636" Offset="0"/>
                                        <GradientStop Color="#2EA043" Offset="0.5"/>
                                        <GradientStop Color="#3FB950" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </Border>
                        <TextBlock x:Name="ProgressPercentageText" FontSize="11" Foreground="#C9D1D9" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"
                                   Visibility="{Binding ElementName=DownloadProgressBar, Path=Visibility}"/>
                    </Grid>
                    
                    <!-- Statistics Grid -->
                    <Grid x:Name="StatisticsGrid" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Files Downloaded -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="📁 Files" FontSize="11" Foreground="#8B949E" 
                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock x:Name="FilesCountText" Text="0 / 0" FontSize="13" 
                                       Foreground="#58A6FF" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Download Speed -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="⚡ Speed" FontSize="11" Foreground="#8B949E" 
                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock x:Name="SpeedText" Text="0 MB/s" FontSize="13" 
                                       Foreground="#3FB950" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Data Downloaded -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="💾 Size" FontSize="11" Foreground="#8B949E" 
                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock x:Name="DataSizeText" Text="0 MB" FontSize="13" 
                                       Foreground="#A371F7" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Time Remaining -->
                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="⏱️ Remaining" FontSize="11" Foreground="#8B949E" 
                                       HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock x:Name="TimeRemainingText" Text="--:--" FontSize="13" 
                                       Foreground="#F85149" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Action Buttons -->
            <Border Grid.Row="4" Background="#161B22" CornerRadius="0,0,12,12" 
                    BorderBrush="#30363D" BorderThickness="0,1,0,0" Padding="20,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" FontSize="12" VerticalAlignment="Center">
                        <Run Text="💡" FontSize="14"/>
                        <Run Text=" Select posts (Ctrl/Shift) and click Download" Foreground="#8B949E"/>
                    </TextBlock>
                    
                    <Button x:Name="SelectAllButton" Grid.Column="1" Content="✔ SELECT ALL" 
                            Click="SelectAllButton_Click" Height="38" Padding="25,0" Margin="0,0,15,0"
                            Style="{StaticResource ModernButton}" FontSize="12"/>
                    
                    <Button x:Name="DownloadButton" Grid.Column="2" Content="📥 DOWNLOAD SELECTED" 
                            Click="DownloadButton_Click" Height="38" Padding="30,0"
                            Style="{StaticResource ActionButton}" FontSize="13"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
