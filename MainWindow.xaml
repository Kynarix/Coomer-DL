<Window x:Class="CoomerDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoomerDownloader"
        mc:Ignorable="d"
        Title="Onlyfans Downloader - by Twixx" Height="700" Width="1100"
        Background="#0D1117" WindowStyle="None" AllowsTransparency="True" 
        ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#21262D"/>
            <Setter Property="Foreground" Value="#C9D1D9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30363D"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border" 
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                          To="#30363D" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border" 
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" 
                                                          To="#21262D" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#161B22"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="BorderBrush" Value="#2EA043"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <Border Background="#0D1117" CornerRadius="12" BorderBrush="#30363D" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.7"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" Background="#161B22" CornerRadius="12,12,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="ðŸ’Ž" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#58A6FF" BlurRadius="10" ShadowDepth="0"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock FontSize="18" FontWeight="Bold" VerticalAlignment="Center">
                            <Run Text="Onlyfans Downloader" Foreground="#C9D1D9"/>
                            <Run Text=" â€¢ " Foreground="#484F58"/>
                            <Run Text="by " Foreground="#8B949E" FontSize="14"/>
                            <Run Text="Twixx" Foreground="#A371F7" FontSize="14" FontWeight="Bold"/>
                        </TextBlock>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Button Content="â”€" Click="MinimizeButton_Click" Width="40" Height="30" 
                                Background="Transparent" Foreground="#8B949E" BorderThickness="0" 
                                FontSize="16" FontWeight="Bold" Cursor="Hand"/>
                        <Button Content="â–¡" Click="MaximizeButton_Click" Width="40" Height="30" 
                                Background="Transparent" Foreground="#8B949E" BorderThickness="0" 
                                FontSize="16" FontWeight="Bold" Cursor="Hand" Margin="5,0"/>
                        <Button Content="âœ•" Click="CloseButton_Click" Width="40" Height="30" 
                                Background="Transparent" Foreground="#8B949E" BorderThickness="0" 
                                FontSize="16" FontWeight="Bold" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <Border Grid.Row="1" Background="#161B22" Padding="25" Margin="20,20,20,10" 
                    CornerRadius="8" BorderBrush="#30363D" BorderThickness="1">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.Loaded">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation From="0" To="1" Duration="0:0:0.5" 
                                               Storyboard.TargetProperty="Opacity"/>
                                <ThicknessAnimation From="0,20,0,0" To="0,0,0,0" Duration="0:0:0.5" 
                                                  Storyboard.TargetProperty="Margin"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                
                <StackPanel>
                    <TextBlock Text="ðŸ” Search Creators" FontSize="16" FontWeight="SemiBold" 
                               Foreground="#C9D1D9" Margin="0,0,0,15"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="#0D1117" CornerRadius="6" 
                                BorderBrush="#30363D" BorderThickness="1">
                            <TextBox x:Name="SearchTextBox" Height="42" Padding="15,10" 
                                     FontSize="14" Background="Transparent" Foreground="#C9D1D9" 
                                     BorderThickness="0" VerticalContentAlignment="Center"
                                     KeyDown="SearchTextBox_KeyDown">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>
                        </Border>
                        
       
                        <Button x:Name="SearchButton" Grid.Column="1" Content="ðŸ” SEARCH" 
                                Click="SearchButton_Click" Height="42" Padding="25,0" Margin="15,0,0,0"
                                Style="{StaticResource PrimaryButton}" FontSize="13"/>
                    </Grid>
                    

                    <Border Height="3" Margin="0,15,0,0" Background="#21262D" CornerRadius="2" 
                            Visibility="{Binding ElementName=LoadingBar, Path=Visibility}">
                        <ProgressBar x:Name="LoadingBar" Height="3" 
                                     Visibility="Collapsed" IsIndeterminate="True" 
                                     Background="Transparent" BorderThickness="0">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#58A6FF" Offset="0"/>
                                    <GradientStop Color="#A371F7" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </Border>
                    
                    <TextBlock x:Name="StatusText" FontSize="12" Foreground="#8B949E" 
                               Margin="0,10,0,0" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Grid.Row="2" Margin="20,0,20,10" Background="#161B22" 
                    CornerRadius="8" BorderBrush="#30363D" BorderThickness="1" Padding="2">
                <ListView x:Name="CreatorsListView" Background="Transparent" 
                          BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="#0D1117"/>
                            <Setter Property="Foreground" Value="#C9D1D9"/>
                            <Setter Property="Padding" Value="15"/>
                            <Setter Property="Margin" Value="3"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="BorderBrush" Value="#30363D"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Padding="{TemplateBinding Padding}" CornerRadius="6">
                                            <GridViewRowPresenter Content="{TemplateBinding Content}" 
                                                                Columns="{TemplateBinding GridView.ColumnCollection}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#21262D"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#58A6FF"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#1C2938"/>
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="#58A6FF"/>
                                                <Setter Property="Foreground" Value="#58A6FF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ðŸ‘¤ Creator ID" DisplayMemberBinding="{Binding id}" Width="250">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#0D1117"/>
                                        <Setter Property="Foreground" Value="#8B949E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                            </GridViewColumn>
                            <GridViewColumn Header="ðŸ“› Display Name" DisplayMemberBinding="{Binding name}" Width="550">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#0D1117"/>
                                        <Setter Property="Foreground" Value="#8B949E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                            </GridViewColumn>
                            <GridViewColumn Header="ðŸŒ Platform" DisplayMemberBinding="{Binding service}" Width="220">
                                <GridViewColumn.HeaderContainerStyle>
                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="#0D1117"/>
                                        <Setter Property="Foreground" Value="#8B949E"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="15,10"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
            
            <Border Grid.Row="3" Background="#161B22" CornerRadius="0,0,12,12" 
                    BorderBrush="#30363D" BorderThickness="0,1,0,0" Padding="20,12">
                <TextBlock FontSize="12" HorizontalAlignment="Center">
                    <Run Text="ðŸ’¡" FontSize="14"/>
                    <Run Text=" Double-click a creator to view and download their posts" Foreground="#8B949E"/>
                </TextBlock>
            </Border>
        </Grid>
    </Border>
</Window>
